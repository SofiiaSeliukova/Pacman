<Window x:Class="WpfApplication1.LoadLibraries"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoadLibraries" Height="300" Width="348">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="You can choose some of this libraries to load, and make Monsters move in another way. Select library from the list below and click OK. If you want to leave they movements by default - press CANCEL."/><LineBreak/><Run Text=""/></TextBlock>
        <DataGrid x:Name="Libraries" ItemsSource="{Binding}" SelectionMode="Single" HorizontalAlignment="Left" Margin="50,95,0,0" VerticalAlignment="Top" Height="109" Width="233"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="37,228,0,0" VerticalAlignment="Top" Width="75" Click="OKButton_Click"/>
        <Button Content="CANCEL" HorizontalAlignment="Left" Margin="208,228,0,0" VerticalAlignment="Top" Width="75" Click="CANCELButton_Click"/>

    </Grid>
</Window>
